<article class="serviceslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% services.forEach(function(item) { %>
        <div class="<% if (pageID == 'home') { %>col-sm-4 text-center<% } else { %>col-sm-8 <% } %>">
          <h3 class="serviceslist-title"><%= item.title %></h3>
          <h5 class="serviceslist-name">with <a href="/services/<%= item.shortname %>"><%= item.name %></a></h5>
          <p class="serviceslist-info">
            <a href="/services/<%= item.shortname %>">
              <% if (pageID == 'home') { %>
                <img class="serviceslist-img img-circle" src="/images/services/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>"></a>
              <% } %>
              <% if (pageID == 'speakerList') { %>
                <img class="serviceslist-img img-circle pull-left" src="/images/services/<%= item.shortname %>_tn.jpg" alt="Photo of <%= item.name %>"></a>
              <% } %>
            </a>
            <% if (pageID == 'speakerDetail') { %>
              <img class="serviceslist-img img-responsive pull-left" src="/images/services/<%= item.shortname %>.jpg" alt="Photo of <%= item.name %>"></a>
            <% } %>
          </a>
            <% if (pageID !== 'home') { %>
              <% if (pageID == 'speakerList') { %>
                <%= item.summary %>
              <% } else { %>
                <%- item.description %>
              <% } %>
            <% } %>
          </p>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>